<% unless paid %>
  <div id="simple_schedule_form">
<% end %>

<p>every</p>
<input type="number" class="form-control" id="steadyFrequency" value="1" name="periodNum">
<select name="period" class="form-control">
  <option value="months" children=".path-months">months</option>
  <option value="weeks" children=".path-weeks">weeks</option>
  <option value="days" children=".path-days">days</option>
</select>

<div class="children">
  <div class="path-months">
    <p>on the</p>
    <select name="month_day" class="form-control" id="month_day">
      <option disabled selected value> -- </option>
      <option value="1">first</option>
      <option value="last">last</option>
      <option value="2">2nd</option>
      <option value="3">3rd</option>
      <option value="4">4th</option>
      <option value="5">5th</option>
      <option value="6">6th</option>
      <option value="7">7th</option>
      <option value="8">8th</option>
      <option value="9">9th</option>
      <option value="10">10th</option>
      <option value="11">11th</option>
      <option value="12">12th</option>
      <option value="13">13th</option>
      <option value="14">14th</option>
      <option value="15">15th</option>
      <option value="16">16th</option>
      <option value="17">17th</option>
      <option value="18">18th</option>
      <option value="19">19th</option>
      <option value="20">20th</option>
      <option value="21">21st</option>
      <option value="22">22nd</option>
      <option value="23">23rd</option>
      <option value="24">24th</option>
      <option value="25">25th</option>
      <option value="26">26th</option>
      <option value="27">27th</option>
      <option value="28">28th</option>
    </select>
    <select name="month_day2" class="form-control" id="month_day2">
      <option disabled selected value> -- </option>
      <option value="day" children=".child .path-months-except-wday">day</option>
      <option value="sun">Sunday</option>
      <option value="mon">Monday</option>
      <option value="tue">Tuesday</option>
      <option value="wed">Wednesday</option>
      <option value="thu">Thursday</option>
      <option value="fri">Friday</option>
      <option value="sat">Saturday</option>
    </select>

    <div class="children">
      <div class="child path-months-except-wday">
        <select name="month_exclude_wday" class="form-control">
          <option disabled selected value> -- </option>
          <option value="none">without exceptions</option>
          <option value="weekends" children=".path-months-except-met">except on weekends</option>
          <option value="except-sun" children=".path-months-except-met">except on Sundays</option>
          <option value="except-mon" children=".path-months-except-met">except on Mondays</option>
          <option value="except-tue" children=".path-months-except-met">except on Tuesdays</option>
          <option value="except-wed" children=".path-months-except-met">except on Wednesdays</option>
          <option value="except-thu" children=".path-months-except-met">except on Thursdays</option>
          <option value="except-fri" children=".path-months-except-met">except on Fridays</option>
          <option value="except-sat" children=".path-months-except-met">except on Saturdays</option>
        </select>

        <div class="children">
          <div class="child path-months-except-met">
            <p>, then <%= paid ? "I get paid" : "run" %> on the</p>
            <select name="month_exclude_met" class="form-control">
              <option value="previous">previous</option>
              <option value="next">next</option>
            </select>
            <select name="month_exclude_met_day" class="form-control">
              <option value="sun">Sunday</option>
              <option value="mon">Monday</option>
              <option value="tue">Tuesday</option>
              <option value="wed">Wednesday</option>
              <option value="thu">Thursday</option>
              <option value="fri">Friday</option>
              <option value="sat">Saturday</option>
            </select>
          </div>
        </div>

      </div>
    </div>

  </div>
  <div class="child path-weeks">
    <p>on</p>
    <select name="week_day" class="form-control">
      <option disabled selected value> -- </option>
      <option value="sun">Sunday</option>
      <option value="mon">Monday</option>
      <option value="tue">Tuesday</option>
      <option value="wed">Wednesday</option>
      <option value="thu">Thursday</option>
      <option value="fri">Friday</option>
      <option value="sat">Saturday</option>
    </select>
  </div>
  <div class="child path-days">
    <p>starting on</p>
    <input name="day_date" class="form-control datepicker">
  </div>

  <div class="path-amount">
    <select name="fixed_amount" class="form-control">
      <option value="fixed" children=".path-fixed-amount">Fixed amount</option>
      <option value="varied">the amount varies</option>
    </select>

    <div class="children">
      <div class="path-fixed-amount">
        <%= select_tag "account_currency", options_for_select(all_currencies(Money::Currency.table), :selected => current_user.currency), {:class => "form-control"} %>
        <input type="number" class="form-control" placeholder="amount">
      </div>
    </div>
  </div>

<% unless paid %>
  </div>
<% end %>