<% @dates ||= [] %>

<div class="btn-group btn-group-toggle" data-toggle="buttons" id="button-group-weekdays">
  <label class="btn btn-secondary <%= 'active' if @dates.include?("mon") %> py-3" id="<%= id_prefix %>-mon">
    <%= f.check_box (id_prefix + "_mon").to_sym, {checked: @dates.include?("mon")} %>
    <span class="d-none d-sm-block">Mon</span>
    <span class="d-block d-sm-none">M</span>
  </label>
  <label class="btn btn-secondary <%= 'active' if @dates.include?("tue") %> py-3" id="<%= id_prefix %>-tue">
    <%= f.check_box (id_prefix + "_tue").to_sym, {checked: @dates.include?("tue")} %>
    <span class="d-none d-sm-block">Tue</span>
    <span class="d-block d-sm-none">T</span>
  </label>
  <label class="btn btn-secondary <%= 'active' if @dates.include?("wed") %> py-3" id="<%= id_prefix %>-wed">
    <%= f.check_box (id_prefix + "_wed").to_sym, {checked: @dates.include?("wed")} %>
    <span class="d-none d-sm-block">Wed</span>
    <span class="d-block d-sm-none">W</span>
  </label>
  <label class="btn btn-secondary <%= 'active' if @dates.include?("thu") %> py-3" id="<%= id_prefix %>-thu">
    <%= f.check_box (id_prefix + "_thu").to_sym, {checked: @dates.include?("thu")} %>
    <span class="d-none d-sm-block">Thu</span>
    <span class="d-block d-sm-none">T</span>
  </label>
  <label class="btn btn-secondary <%= 'active' if @dates.include?("fri") %> py-3" id="<%= id_prefix %>-fri">
    <%= f.check_box (id_prefix + "_fri").to_sym, {checked: @dates.include?("fri")} %>
    <span class="d-none d-sm-block">Fri</span>
    <span class="d-block d-sm-none">F</span>
  </label>
  <label class="btn btn-secondary <%= 'active' if @dates.include?("sat") %> py-3" id="<%= id_prefix %>-sat">
    <%= f.check_box (id_prefix + "_sat").to_sym, {checked: @dates.include?("sat")} %>
    <span class="d-none d-sm-block">Sat</span>
    <span class="d-block d-sm-none">S</span>
  </label>
  <label class="btn btn-secondary <%= 'active' if @dates.include?("sun") %> py-3" id="<%= id_prefix %>-sun">
    <%= f.check_box (id_prefix + "_sun").to_sym, {checked: @dates.include?("sun")} %>
    <span class="d-none d-sm-block">Sun</span>
    <span class="d-block d-sm-none">S</span>
  </label>
</div>