<div class="modal <%= 'fade' if Rails.env.test? == false %>" id="accountform" tabindex="-1" role="dialog" aria-labelledby="transactionformLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="transactionformLabel">New Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_with(model: Account.new) do |f| %>
        <div class="modal-body">
          <div class="container">

            <div class="row py-2">
              <div class="col-12">
                <%= f.label :name %><br />
                <%= f.text_field :name, placeholder: "Current account", class: 'form-control' %>
              </div>
            </div>

            <div class="row py-2">
              <div class="col-12 col-sm-9">
                <%= f.label :balance %><br />
                <%= f.number_field :balance, placeholder: "1000.00", class: 'form-control', step: :any %>
              </div>
              <div class="col-12 col-sm-3">
                <%= f.label :currency %><br />
                <%= f.select(:currency, all_currencies(Money::Currency.table), {selected: current_user.currency}, { :class => 'form-control', "default_option" => current_user.currency }) %>
              </div>
            </div>

            <div class="row py-2">
              <div class="col-12">
                <%= f.label :description %><br />
                <%= f.text_area :description, class: 'form-control' %>
              </div>
            </div>

          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Create Account', :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>