<% if @budget.invalid? %>
	triggerNotice("<%= format_form_errors("budget", @budget.errors) %>", true);
<% else %>
	$("#categories-dropdown").html("Select a category")
	$("#category_id_budget_budget").val("");
	$("#category_id_budget_budget").val("");
	UpdateLeftMenu();

	$("#budgets_list").html("");
	insertAjaxSpinner($("#budgets_list"));
	$.ajax({
		type: "GET",
		dataType: "html",
		url: "/api/v1/render/budgets_list",
		success(data){
			$("#budgets_list").html(data);
		}
	});
<% end %>