<%= content_for :meta_title, t('views.budgets.title') %>

<div class="container">
	<div class="row">
		<div class="col-12">
			<h2>
				<%= t('views.budgets.title') %>
				<button type="button" class="float-right btn btn-primary" id="new-budget">
          <%= t('views.budgets.new') %>
        </button>
			</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<h5>
				<%= t('defaults.shared.dates.from').capitalize %> <%= User.format_date(@start_date) %> <%= t('defaults.shared.dates.to') %> <%= User.format_date(@end_date) %>
			</h5>
		</div>
	</div>

	<div id="new-budget-form" style="display: none;">
		<%= form_with(model: Budget.new) do |f| %>
			<div class="row">

				<div class="col-12 col-lg-4 py-2">
					<%= f.label :category %><br />
		      <%= render partial: "/shared/custom_dropdown_categories", locals: {
		        selected: nil,
		        options: Category.get_user_categories(current_user, true, false, false, "Select a category"),
		        input_target: '#category_id_budget',
		        button_type: "btn-light",
		        id_suff: "_budget",
		        blank_string: t('views.categories.select'),
		      } %>
		      <%= f.hidden_field :category_id, :id => "category_id_budget_budget" %>
		    </div>

		    <div class="col-12 col-lg-5 py-2">
		    	<%= f.label :budget %>
		    	<%= f.number_field :amount, class: "form-control", step: "any" %>
		    </div>

		    <div class="col-12 col-lg-3 py-2">
		    	<%= f.label :submit, "&nbsp;".html_safe %><br />
		    	<%= f.button t('views.buttons.budgets.create.text'), :class => 'btn btn-primary', data: {disable_with: image_tag("ajax_spinner_white.svg", height: "20") + " #{t('views.buttons.budgets.create.action')} ..."} %>
		    </div>

			</div>
		<% end %>
	</div>

	<div id="budgets_list">
		<%= render partial: "budgets/budgets_list", :locals => { :budgets => @budgets } %>
	</div>

</div>