<%= form_with(model: Account.new) do |f| %>
  <div class="modal-body">
    <div class="container">

      <div class="row py-2">
        <div class="col-12 col-sm-7">
          <%= f.label :name %><br />
          <%= f.text_field :name, placeholder: "Current account", class: 'form-control' %>
        </div>
        <div class="col-12 col-sm-5">
          <%= f.label :type %><br />
          <%= f.select(:account_type, [[I18n.t('account.types.spending'), "spend"], [I18n.t('account.types.saving'), "save"]], {selected: "spend"}, {:class => "form-control"}) %>
        </div>
      </div>

      <div class="row py-2">
        <div class="col-12 col-sm-7">
          <%= f.label :balance %><br />
          <%= f.number_field :balance, placeholder: "1000.00", class: 'form-control', step: :any %>
        </div>
        <div class="col-12 col-sm-5">
          <%= f.label :currency %><br />
          <%= f.select(:currency, all_currencies(Money::Currency.table), {selected: current_user.currency}, { :class => 'form-control', "default_option" => current_user.currency }) %>
        </div>
      </div>

      <div class="row py-2">
        <div class="col-12">
          <%= f.label :description %><br />
          <%= f.text_area :description, class: 'form-control' %>
        </div>
      </div>

    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= f.button I18n.t('buttons.create_account.text'), :class => 'btn btn-primary', data: {disable_with: image_tag("ajax_spinner_white.svg", height: "20") + " #{I18n.t('buttons.create_account.action')} ..."} %>
  </div>
<% end %>