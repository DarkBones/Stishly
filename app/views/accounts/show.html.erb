<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>

        <%= @active_account.name %> -
        <span id="account-title-balance" balance=<%= @active_account.balance%>>
          <%= balance(@active_account.balance.to_f, Account.get_currency(@active_account), "cents") %>
        </span>

      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render "account_tab_menu", locals: {active_tab: "Transactions"} %>
    </div>
  </div>

  <div id="row">
    <div class="col-12">
      <%= render partial: "filter_form" %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div id="transactions_list" class="py-4 px-4 <%= "border border-warning rounded border-3" if @filtered %>">
        <%# TODO: Find better color for filtered border %>
        <%= render partial: "transactions" %>

      </div>
    </div>
  </div>

</div>