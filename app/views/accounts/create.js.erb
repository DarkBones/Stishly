<% if @account.is_a? String %>
  trigger_notice('<%= @account %>', true);
  $('#accountmenu').effect( "shake", { direction: "left", times: 4, distance: 6} );
<% else %>
  ToggleCardForm('#accountmenu');
  ClearValues('#accountmenu');

  $('#user_accounts_list').prepend('<%= j render @account %>');
  $('#account_' + <%= @account.id %>).hide().fadeIn(1000);

  var total_amount = parseInt($('#accounts_list li').first().find('span').attr('balance'));

  // Update the total amount
  $.ajax({
    type: "GET",
    dataType: "json",
    url: "/api/account_display_balance/" + (total_amount).toString() + '/' + '<%= @account.currency %>' + '/' + '<%= User.get_currency(current_user) %>' + '/' + '<%= @account.balance %>',
    success: function(data) {
      total_amount = parseInt(data.balance)
      $('#accounts_list li').first().find('span').attr('balance', total_amount);
      $('#accounts_list li').first().find('span').html(data.html);
    }
  });

  trigger_notice('<%= I18n.t("account.confirmations.confirmed") %>', false);
<% end %>

  

  

