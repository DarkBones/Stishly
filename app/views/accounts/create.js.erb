ToggleCardForm('#accountmenu');
ClearValues('#accountmenu');

$('#user_accounts_list').prepend('<%= j render @account %>');
$('#account_' + <%= @account.id %>).hide().fadeIn(1000);

var total_amount = parseInt($('#accounts_list li').first().find('span').attr('balance'));

//$('#accounts_list li').first().find('span').attr('balance', total_amount)

console.log('list elements:');
console.log($("#accounts_list li").length);

$.ajax({
  type: "GET",
  dataType: "text",
  url: "/api/convert_currency/" + '<%= @account.balance %>' + '/' + '<%= @account.currency %>' + '/' + '<%= User.get_currency(current_user) %>',
  success: function(data){
    console.log('+++ ' + data);
    $('#user_accounts_list').prepend(total_amount + parseInt(data));
    $.ajax({
      type: "GET",
      dataType: "text",
      url: "/api/format_currency/" + (total_amount += parseInt(data)).toString() + '/' + '<%= User.get_currency(current_user) %>',
      success: function(result){
        $('#accounts_list li').first().find('span').attr('balance', total_amount);
        $('#accounts_list li').first().find('span').text(result);
      } 
    });
  },
  error: function(data){
    console.log('ERROR');
    console.log(data);
  }
});