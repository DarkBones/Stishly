<h3>Account settings</h3>
<%= form_for :setting_value, :url => edit_account_settings_path do |f| %>
  <%= f.select(:currency, all_currencies(Money::Currency.table), selected: Account.get_currency(@active_account).iso_code) %>

  <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Make Default', set_default_account_path %>