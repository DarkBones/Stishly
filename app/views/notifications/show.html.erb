<%= content_for :meta_title, "Notifications" %>

<div class="container">
  <div class="row">
  	<div class="col-12">
  		<h2><%= t('views.notifications.name') %></h2>
	  	<ul class="notifications list-unstyled">
	  		<% if @notifications.length > 0 %>
	  			<%= render @notifications, :locals => {:truncate => false} %>
	  		<% else %>
	  			<p><%= t('views.notifications.none') %></p>
	  		<% end %>
	  	</div>
	  </ul>
  </div>
</div>

<%= will_paginate @notifications %>