<div class="dropdown">
  <button class="btn <%= button_type %> dropdown-toggle text-left" type="button" id="categories-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" input-target="<%= input_target + id_suff %>">
    <% if selected.nil? %>
      <%= "- any -" %>
    <% else %>
      <%= image_tag('categories/' + selected.symbol + '.svg', :class => 'rounded-circle', :style => 'background-color: hsl(' + selected.color + ');', 'height' => '30') %> <%= selected.name %>
    <% end %>
  </button>
  <div class="dropdown-menu" aria-labelledby="categories-dropdown" id="categoriesDropdownOptions<%= id_suff %>">
    <input id="search-categories<%= id_suff %>" placeholder="Search" class="form-control" onkeyup="searchCategories('#categoriesDropdownOptions<%= id_suff %>', '#search-categories<%= id_suff %>', this)"></input>
    <%= draw_tree(options, id_suff) %>
  </div>
</div>
