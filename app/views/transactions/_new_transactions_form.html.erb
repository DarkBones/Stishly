<% transaction = Transaction.new.decorate %>
<%= form_with(model: transaction) do |f| %>
  <div class="modal-body">
    <div class="container">

        <%= render partial: "transactions/transaction_form_fields", :locals => {:transaction => transaction, :f => f, :base_only => false, :form_id_prefix => "", :form_id_suffix => "" } %>

    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('buttons.close.text') %></button>
    <%= f.button t('buttons.create_transaction.text'), :class => 'btn btn-primary', data: {disable_with: image_tag("ajax_spinner_white.svg", height: "20") + " #{t('buttons.create_transaction.action')} ..."} %>
  </div>
<% end %>