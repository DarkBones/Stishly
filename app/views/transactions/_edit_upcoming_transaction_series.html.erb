<%# transaction = Transaction.new.decorate %>
<%= form_with(model: transaction, :url => edit_upcoming_transaction_series_path) do |f| %>
  <div class="modal-body">
    <div class="container">

        <%= render partial: "transactions/transaction_form_fields", :locals => {:transaction => transaction, :f => f, :base_only => true, :form_id_prefix => "", :form_id_suffix => "", :scheduled_transaction_id => transaction.hash_id } %>

    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= f.button t('buttons.edit_upcoming_series.text'), :class => 'btn btn-primary', data: {disable_with: image_tag("ajax_spinner_white.svg", height: "20") + " #{t('buttons.edit_upcoming_series.action')} ..."} %>
  </div>
<% end %>