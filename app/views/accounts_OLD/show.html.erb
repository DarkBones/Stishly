<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><%= @active_account.name %>
        <% if @active_account.is_real %>
          -
          <span id="account-title-balance" balance=<%= @active_account.balance %>>
            <%= balance(@active_account.balance.to_f, Account.get_currency(@active_account), "cents") %>
          </span>
        <% end %>
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render "account_tab_menu", locals: {active_tab: "Transactions"} %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div id="transactions_list">
        <% locals = {transactions: @account_transactions, daily_totals: @daily_totals, account_currency: @account_currency} %>
        <%= render "transactions", locals: locals %>
      </div>
    </div>
  </div>
</div>