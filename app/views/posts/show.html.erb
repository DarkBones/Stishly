<%= content_for :meta_title, "#{@post.title}" %>
<%= content_for :meta_robots, "index, follow" %>
<%= content_for :meta_description, @post.body.html_safe.truncate(160) %>
<%= content_for :meta_keywords, @post.tags %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%#= @post.body.gsub("\n", "<br />").html_safe %>
  <%#= (@post.body.gsub(/\^b.*\^b/){|s| '<b>' + s.gsub('^b', '') + '</b>' }).html_safe %>
  <%#= @post.body_html %>
  <%= post_html(@post.body) %>
</p>

<p>
  <strong>Thumbnail:</strong>
  <%= @post.thumbnail %>
</p>

<%= @post.body.dump %><br />

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
