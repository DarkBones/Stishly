      <% end %>
    </li>

    <li class="nav-item d-none d-sm-block">
      <%= link_to t('buttons.sign_in.text'), new_user_session_path, { :class=>"nav-link" } %>
    </li>
    <li class="nav-item d-none d-sm-block">
      <%= link_to t('buttons.sign_up.text'), new_user_registration_path, { :class=>"nav-link" } %>
    </li>
  <% end %>
