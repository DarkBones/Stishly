<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Money Manager" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Money Manager" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <%= csrf_meta_tags %>
    <% if user_signed_in? %>
      <meta name="timezone" content="<%= current_user.timezone %>">
    <% end %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <%= render 'layouts/messages' %>
      <%= render 'layouts/left_menu' %>
      <div id="content">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
