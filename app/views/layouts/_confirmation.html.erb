<div class="modal <%= 'fade' if Rails.env.test? == false %>" id="confirmation_modal" tabindex="-1" role="dialog" aria-labelledby="confirmationLabel" aria-hidden="true" style="z-index: 100000;">
  <div class="modal-dialog modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmationLabel"><%= t('modal_titles.delete_confirmation') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <p><%= t('modal_titles.delete_confirmation') %></p>
      </div>

      <div class="modal-footer">

        <%= form_tag("/schedules", method: "delete", remote: true) do %>
          <%= submit_tag t('buttons.confirm.text'), class: "btn btn-danger" %>
        <% end %>

        <button type="button" class="btn btn-secondary delete-confirm-dismiss" data-dismiss="modal"><%= t('buttons.deny.text') %></button>
      </div>

    </div>
  </div>
</div>