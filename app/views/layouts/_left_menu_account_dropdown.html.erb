<div id="accountDropdownAccordion" class="d-block d-sm-none">
  <div class="card">

    <div class="card-header" id="accountDropdown">
      <a class="btn btn-link collapsed col-12 clickable" data-toggle="collapse" data-target="#collapseAccuntDropdown" id="accountDropdownToggle">
        <span class="float-left">
          <h5><%= current_user.first_name if Rails.env.test? == false %></h5>
        </span>
      </a>
    </div>

    <div id="collapseAccuntDropdown" class="collapse" aria-labelledby="accountDropdown" data-parent="#accountDropdownAccordion">
      <div class="card-body">
        <%= render partial: 'layouts/dropdown_menu', :locals => { :is_dropdown => false } %>
      </div>
    </div>

  </div>
  <hr />
</div>