<% if user_signed_in? && @accounts %>
  <div id="left-menu">
    <h2>Accounts</h2>
    <ul>
      <li>
      <%= form_for :account, :url => url_for(:controller => 'app', :action => 'create_account') do |f| %>
        <%= f.text_field :name_balance %>
      <% end %>
      </li>
      <% if @accounts.length > 1 %>
        <li class="clickable active">
          All accounts <span class="balance">
          <%= @currency_symbol %> <%= balance(@total_balance, @cents_amount, "cents") %></span>
        </li>
      <% end %>
      <% @accounts.each do |a| %>
        <% @balance = 0.to_f %>
        <% if a.balance %>
          <% @balance = a.balance.to_f %>
        <% end %>
        <li class="clickable">
          <%= a.name %> <span class="balance">
          <%= @currency_symbol %> <%= balance(@balance, @cents_amount, "cents") %></span>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>